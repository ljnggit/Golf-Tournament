/*--------Text animation------ */

.container{
 text-align:center; 
  vertical-align: middle;
}

.animate-charcter
{
	margin-top: 1.5em;
	text-transform: uppercase;
background-color: #17f9f2;
background-image: linear-gradient(320deg, #17f9f2 0%, #b0f9a9 84%);
	background-size: auto auto;
	background-clip: border-box;
	background-size: 200% auto;
	color: #fff;
	background-clip: text;
	text-fill-color: transparent;
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
	animation: textclip 2s linear infinite;
	display: inline-block;
	font-size: 28px;

}

@keyframes textclip {
  to {
    background-position: 200% center;
  }
}

.navbar {
	background-color: #0A0200;;
}
/*---- */

@import "font-awesome";

.content {
  display: flex;
  flex-direction: column;
  text-align: center;
}

.customBtn-registration{
	margin-top: 2.5em;
}

.customBtn {
  padding: 15px;
  font-weight: 700;
  font-size: 2rem;
  text-decoration: none;
  text-align: center;
  transition: all .5s ease; 
}

.btn--registration {
  color: #fff;
  padding-right: 0;
  background-color: #c0392b;
  -webkit-clip-path: polygon(0% 0%, 100% 0, 100% 70%, 90% 100%, 0% 100%);
  clip-path: polygon(0 0, 100% 0, 100% 50%, 75% 100%, 0 100%);

}

.btn--registration:hover { 
	color: white;	
	-webkit-clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%);
	clip-path: polygon(0 0, 100% 0, 100% 100%, 100% 100%, 0 100%);  
}

.btn--registration:after {
  content: "\f004";
  color: #e74c3c;
  font-family: FontAwesome;
  display: inline-block;
  position: relative;
  right: -55px;
  transition: all 0.2s ease;
}

.btn--registration:hover:after {
  margin: -5px 15px;
  right: 0px;
}

.navbar-toggler-icon.icon-bar{
  background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 32 32' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba(255,255,255, 0.5)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 8h24M4 16h24M4 24h24'/%3E%3C/svg%3E");
}
a.nav-link, a.navbar-brand{
	margin: 0 2.5em 0 3em;
}


a.nav-link {
  color: white;
  text-decoration: none;
}

a.nav-link:hover {
  color: white;
  border-bottom: 1px solid red;
}

.centered {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}


/*footer*/
.customFooter{
